<div class="column">
  <div class="card card--proposal card--stack">
    <%= link_to proposal_path(proposal) do %>
      <div class="card--header">
        <img src="<%= image_pack_url("media/images/slider_proposal_image.jpeg") %>" alt="slider_img">
      </div>
    <% end %>
    <div class="card--content text-center margin-top-1">
      <%= link_to proposal_path(proposal) do %>
        <h3 class="card__title"><%= proposal_title(proposal)  %></h3>
      <% end %>
      <div class="tech-info tech-info--text-center">
        <p><%= proposal_description(proposal) %></p>
      </div>
      <%= link_to proposal_path(proposal) do %>
        <div class="card__button align-bottom">
          <span class="button button--secondary"><%= t("decidim.homepage_proposals.proposal_at_a_glance.learn_more") %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
